{
    "name": "druki/project",
    "description": "The druki.ru website codebase.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://druki.ru/",
    "authors": [
        {
            "name": "Nikita Malyshev (Niklan)",
            "homepage": "https://niklan.net",
            "email": "hello@niklan.net",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/druki/website",
        "issues": "https://gitlab.com/druki/website/issues",
        "chat": "https://discord.gg/sc2V8km"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "path",
            "url": "web/modules/custom/*"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "druki/druki": "8.x-dev",
        "druki/druki_content": "8.x-dev",
        "druki/druki_file": "8.x-dev",
        "druki/druki_git": "8.x-dev",
        "druki/druki_markdown": "8.x-dev",
        "druki/druki_media": "8.x-dev",
        "druki/druki_page": "8.x-dev",
        "druki/druki_paragraph": "8.x-dev",
        "druki/druki_search": "8.x-dev",
        "drupal/block_visibility_groups": "^1.3",
        "drupal/config_split": "^1.4",
        "drupal/core-composer-scaffold": "^8.7",
        "drupal/core-recommended": "^8.7",
        "drupal/extra_field": "^1.0",
        "drupal/glisseo": "1.x-dev#61a1c98",
        "drupal/google_tag": "^1.1",
        "drupal/imagemagick": "^2.5",
        "drupal/markdown": "2.x-dev",
        "drupal/metatag": "^1.8",
        "drupal/pathauto": "^1.3",
        "drupal/photoswipe": "2.x-dev",
        "drupal/restui": "^1.16",
        "drupal/search_api": "^1.12",
        "drupal/simple_sitemap": "^3.1",
        "drupal/snowball_stemmer": "^1.1",
        "drupal/twig_tweak": "^2.1",
        "drupal/webp": "1.x-dev",
        "drush/drush": "^10.0",
        "npm-asset/lazysizes": "^5.1",
        "npm-asset/photoswipe": "^4.1",
        "oomphinc/composer-installers-extender": "^1.1"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/core-dev": "^8.7"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "patches": {
            "drupal/photoswipe": {
                "Responsive image support. https://www.drupal.org/project/photoswipe/issues/2980534": "https://www.drupal.org/files/issues/2019-06-03/responsive-image-fromatter-2980534-18.patch"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/robots.txt": false
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library", "type:bower-asset", "type:npm-asset"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        }
    }
}
