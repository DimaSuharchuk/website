{
    "name": "druki/project",
    "description": "The druki.ru website codebase.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://druki.ru/",
    "authors": [
        {
            "name": "Nikita Malyshev (Niklan)",
            "homepage": "https://niklan.net",
            "email": "hello@niklan.net",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/druki/website",
        "issues": "https://gitlab.com/druki/website/issues",
        "chat": "https://discord.gg/sc2V8km"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "drupal/markdown",
                "description": "The workaround for Drupal 9 update.",
                "homepage": "https://www.drupal.org/project/markdown",
                "version": "2.0",
                "license": "GPL-2.0+",
                "source": {
                    "type": "git",
                    "url": "https://git.drupalcode.org/project/markdown.git",
                    "reference": "1b8d7545a7f6dad0b18cc248e20100a83bf689b6"
                },
                "type": "drupal-module",
                "minimum-stability": "dev",
                "require": {
                    "drupal/core": "^8.8 || ^9",
                    "league/commonmark": "^1.0.0"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "path",
            "url": "web/modules/custom/*"
        },
        {
            "type": "path",
            "url": "web/themes/custom/*"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "druki/druki": "8.x-dev",
        "druki/druki_content": "8.x-dev",
        "druki/druki_file": "8.x-dev",
        "druki/druki_git": "8.x-dev",
        "druki/druki_markdown": "8.x-dev",
        "druki/druki_media": "8.x-dev",
        "druki/druki_page": "8.x-dev",
        "druki/druki_paragraph": "8.x-dev",
        "druki/druki_search": "8.x-dev",
        "druki/loremaster": "dev-new-theme-2020",
        "drupal/block_visibility_groups": "1.x-dev",
        "drupal/config_split": "^1.4",
        "drupal/core-composer-scaffold": "^9.0",
        "drupal/core-recommended": "^9.0",
        "drupal/extra_field": "^1.0",
        "drupal/glisseo": "1.x-dev",
        "drupal/google_tag": "^1.1",
        "drupal/imagemagick": "^3.0",
        "drupal/markdown": "2.0",
        "drupal/metatag": "^1.8",
        "drupal/pathauto": "^1.3",
        "drupal/photoswipe": "^3.0",
        "drupal/restui": "^1.16",
        "drupal/search_api": "^1.12",
        "drupal/simple_sitemap": "^3.1",
        "drupal/twig_tweak": "^3.0",
        "drupal/warmer": "^1.1",
        "drupal/webp": "1.x-dev",
        "drush/drush": "^10.0",
        "league/commonmark": "^1.0.0",
        "npm-asset/photoswipe": "^4.1",
        "oomphinc/composer-installers-extender": "^1.1"
    },
    "require-dev": {
        "deployer/deployer": "^6.7",
        "drupal/coder": "^8.3",
        "drupal/core-dev": "^9.0",
        "mglaman/drupal-check": "^1.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "patches": {
            "drupal/core": {
                "MapItem definition (dgo.to/2887105)": "./patches/drupal-core-2887105-12.patch"
            },
            "drupal/block_visibility_groups" : {
                "Drupal 9 support": "./patches/block_visibility_groups-3131294-7.patch"
            },
            "drupal/webp": {
                "Drupal 9 support": "./patches/webp-3144282-8.patch"
            },
            "drupal/markdown": {
                "Drupal 9 support": "./patches/markdown-d9.patch"
            },
            "drupal/photoswipe": {
                "Responsive image support. https://dgo.to/2980534": "./patches/drupal-photoswipe-2980534-21.patch"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": false,
                "[web-root]/robots.txt": false
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library", "type:bower-asset", "type:npm-asset"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        }
    }
}
