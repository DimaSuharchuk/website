<?php

/**
 * @file
 * Install, update and uninstall functions for the Druki � — git module.
 */

/**
 * Implements hook_requirements().
 */
function druki_git_requirements($phase) {
  $requirements = [];

  if ($phase == 'install') {
    if (!class_exists('Cz\Git\GitRepository')) {
      $requirements['druki_git_status'] = [
        'title' => 'Druki Git',
        'value' => t('The required dependency @dependency is missing. Install it and try again.', ['@dependency' => 'czproject/git-php']),
        'severity' => REQUIREMENT_ERROR,
      ];
    }
  }

  return $requirements;
}
