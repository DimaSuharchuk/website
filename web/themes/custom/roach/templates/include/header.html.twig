{#
/**
 * @file
 * Default theme implementation to present page header.
 */
#}
{% set bem_block = 'header' %}
<header class="{{ bem_block }} app__header" data-theme="dark">
  <div class="{{ bem_block }}__inner">
    <div class="{{ bem_block }}__left">
      <form action="/search" class="{{ bem_block }}__search">
        <input name="text"
               type="text"
               placeholder="Поиск по энциклопедии"
               autocomplete="off"
               class="{{ bem_block }}__search-input">
        <span class="{{ bem_block }}__search-icon"></span>
      </form>
    </div>

    <div class="{{ bem_block }}__center">
      {{ drupal_block('druki_content_links') }}
    </div>

    <div class="{{ bem_block }}__right">
      <div class="dark-mode-toggle"><span class="dark-mode-toggle__icon"></span></div>
    </div>
  </div>
</header>
