{#
/**
 * @file
 * Default theme implementation to present mega menu.
 */
#}
{% macro navigation() %}
  {% set bem_block = 'mega-menu-navigation' %}
  <div class="{{ bem_block }}">
    <ul class="{{ bem_block }}__items">
      <li class="{{ bem_block }}__item">
        <a href="/wiki"
           class="{{ bem_block }}__link"
           data-mega-menu-id-selector="learn">
          Обучение
        </a>
      </li>
      <li class="{{ bem_block }}__item">
        <a href="/wiki"
           class="{{ bem_block }}__link"
           data-mega-menu-id-selector="ecosystem">
          Экосистема
        </a>
      </li>
    </ul>
  </div>
{% endmacro %}

{% macro mega_menu() %}
  {{ attach_library('autumn/mega_menu') }}
  {% set bem_block = 'mega-menu' %}

  {# Mega Menu: learn #}
  <div class="{{ bem_block }}" data-mega-menu-id="learn">
    <div class="{{ bem_block }}__inner">
      <div class="{{ bem_block }}__column">
        <h6>Drupal</h6>

        <ul class="{{ bem_block }}__menu">
          <li class="{{ bem_block }}__menu-item">
            <a href="{{ url('druki.download') }}" class="{{ bem_block }}__menu-link">
              Скачать
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/drupal" class="{{ bem_block }}__menu-link">
              Что такое Drupal
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/faq" class="{{ bem_block }}__menu-link">
              Часто задаваемые вопросы
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/changelog" class="{{ bem_block }}__menu-link">
              Список изменений
            </a>
          </li>
        </ul>
      </div>

      <div class="{{ bem_block }}__column">
        <h6>Начало работы</h6>

        <ul class="{{ bem_block }}__menu">
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/installation" class="{{ bem_block }}__menu-link">
              Установка
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/admin" class="{{ bem_block }}__menu-link">
              Административный интерфейс
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/composer" class="{{ bem_block }}__menu-link">
              Composer
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/drush" class="{{ bem_block }}__menu-link">
              Drush
            </a>
          </li>
        </ul>
      </div>

      <div class="{{ bem_block }}__column">
        <h6>Полезная информация</h6>

        <ul class="{{ bem_block }}__menu {{ bem_block }}__menu--two-cols">
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/themes" class="{{ bem_block }}__menu-link">
              Темы оформления
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/modules" class="{{ bem_block }}__menu-link">
              Модули
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/plugins" class="{{ bem_block }}__menu-link">
              Плагины
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/services" class="{{ bem_block }}__menu-link">
              Сервисы
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/hooks" class="{{ bem_block }}__menu-link">
              Хуки
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/form-api" class="{{ bem_block }}__menu-link">
              Form API
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/routing" class="{{ bem_block }}__menu-link">
              Маршрутизация
            </a>
          </li>
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/8/libraries-api" class="{{ bem_block }}__menu-link">
              Libraries API
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  {# Mega Menu: ecosystem #}
  <div class="{{ bem_block }}" data-mega-menu-id="ecosystem">
    <div class="{{ bem_block }}__inner">
      <div class="{{ bem_block }}__column">
        <h6>Помощь и общение</h6>

        <ul class="{{ bem_block }}__menu">
          <li class="{{ bem_block }}__menu-item">
            <a href="/wiki/community" class="{{ bem_block }}__menu-link">
              Сообщество
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
{% endmacro %}
